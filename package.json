{
    "name": "skeleton",
    "label": "Skeleton",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.8.0"
        }
    ],
    "configurationBuilder": "/configurationBuilder.js",
    "configuration": [
        {
            "name": "label",
            "label": "Label",
            "type": "label",
            "value": "label"
        },
        {
            "name": "choice",
            "label": "Choice",
            "required": false,
            "defaultValue": "true",
            "type": "buttonsGroup",
            "typeOptions": {
                "allowCustom": true,
                "possibleValues": [
                    {
                        "label": "True",
                        "name": "true"
                    },
                    {
                        "label": "False",
                        "name": "false"
                    },
                    {
                        "label": "Other",
                        "name": "other"
                    }
                ]
            }
        },
        {
            "name": "text",
            "label": "Text",
            "type": "text",
            "required": "false",
            "visibility": "config.choice == 'true'"
        },
        {
            "name": "info",
            "label": "info",
            "type": "label",
            "value": "'info'"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Event triggered when there is a webhook coming from PandaDoc."
        },
        {
            "label": "Callback",
            "name": "callback",
            "description": "Happens when a async process is finished"
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "listener",
            "namespace": "webhook",
            "path": "/listeners/webhook.js"
        },
        {
            "type": "flowStep",
            "namespace": "apiCallSkeleton",
            "path": "/flowSteps/apiCallSkeleton"
        },
        {
            "type": "flowStep",
            "namespace": "customFlow",
            "path": "/flowSteps/customFlow"
        },
        {
            "type": "uiService",
            "namespace": "testUiService",
            "path": "/uiServices/testUiService"
        }
    ]
}
